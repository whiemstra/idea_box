<h2>Viewing Category: <%= @category.title %></h2>

<ul>
  <%# to show just the users `@category.ideas.where(user_id: current_user.id).each` %>
  <% @category.ideas.each do |idea| %>
    <li>
      <%= idea.description %> |
      <%# if current_user == idea.user %>
        <%= link_to 'Edit', edit_idea_path(idea) %> |
        <%= link_to 'Delete Idea', idea_path(idea), method: 'delete' %>
      <%# end %>
    </li>
  <% end %>
</ul>

<p>Total Ideas: <%= @category.ideas.count %></p>

<%# if current_admin %>
<%= link_to 'Delete', category_path(@category), method: 'delete' %> |
<%# end %>
<%= link_to 'Back to Category List', categories_path %>
